# .env.example - Variables de entorno de ejemplo para logistic_control

# --- Database ---
DB_HOST=postgres
DB_PORT=5432
DB_NAME=logistic_db
DB_USERNAME=postgres
DB_PASSWORD=postgres

# --- Server / Spring ---
SERVER_PORT=8080
SPRING_PROFILES_ACTIVE=dev

# --- JWT ---
# Use una cadena segura y larga (base64 o hex). Rotar periódicamente.
JWT_SECRET=change_this_to_a_secure_random_value
JWT_EXPIRATION=86400000
JWT_REFRESH_EXPIRATION=604800000

# --- Encryption (AES-256) ---
# Debe ser una clave segura; puede estar en base64/hex según su implementación
ENCRYPTION_KEY=change_this_to_secure_encryption_key

# --- SIFEN (opcional) ---
SIFEN_AMBIENTE=test
SIFEN_CERT_PATH=certificates/sifen-cert.p12
SIFEN_CERT_PASSWORD=changeit
SIFEN_RUC=80000000-1
SIFEN_RAZON_SOCIAL="EMPRESA LOGISTICA S.A."
SIFEN_NOMBRE_FANTASIA="LOGISTICA EXPRESS"
SIFEN_TIMBRADO=12345678
SIFEN_ESTABLECIMIENTO=001
SIFEN_PUNTO_EXPEDICION=001



# --- CORS (coma-separated list) ---
CORS_ORIGINS=http://localhost:3000,http://localhost:8080

# --- Logging ---
LOG_LEVEL=DEBUG



