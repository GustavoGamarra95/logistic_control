<?xml version="1.0" encoding="UTF-8"?>
<jasperReport xmlns="http://jasperreports.sourceforge.net/jasperreports"
              xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
              xsi:schemaLocation="http://jasperreports.sourceforge.net/jasperreports http://jasperreports.sourceforge.net/xsd/jasperreport.xsd"
              name="pedido" pageWidth="595" pageHeight="842" columnWidth="535" leftMargin="30" rightMargin="30"
              topMargin="20" bottomMargin="20">

    <parameter name="PEDIDO_NUMERO" class="java.lang.String"/>
    <parameter name="CLIENTE_RAZON_SOCIAL" class="java.lang.String"/>
    <parameter name="CLIENTE_RUC" class="java.lang.String"/>
    <parameter name="FECHA_PEDIDO" class="java.util.Date"/>
    <parameter name="ESTADO" class="java.lang.String"/>
    <parameter name="TOTAL" class="java.math.BigDecimal"/>
    <parameter name="QR_CODE" class="java.io.InputStream"/>
    <parameter name="VERIFICATION_CODE" class="java.lang.String"/>
    <parameter name="GENERATED_DATE" class="java.util.Date"/>

    <field name="producto" class="java.lang.String"/>
    <field name="cantidad" class="java.lang.Integer"/>
    <field name="precioUnitario" class="java.math.BigDecimal"/>
    <field name="subtotal" class="java.math.BigDecimal"/>

    <title>
        <band height="120">
            <staticText>
                <reportElement x="0" y="0" width="535" height="30"/>
                <textElement textAlignment="Center" verticalAlignment="Middle">
                    <font size="18" isBold="true"/>
                </textElement>
                <text><![CDATA[PEDIDO]]></text>
            </staticText>
            <staticText>
                <reportElement x="0" y="40" width="100" height="20"/>
                <textElement><font isBold="true"/></textElement>
                <text><![CDATA[N° Pedido:]]></text>
            </staticText>
            <textField>
                <reportElement x="100" y="40" width="200" height="20"/>
                <textFieldExpression><![CDATA[$P{PEDIDO_NUMERO}]]></textFieldExpression>
            </textField>
            <staticText>
                <reportElement x="0" y="60" width="100" height="20"/>
                <textElement><font isBold="true"/></textElement>
                <text><![CDATA[Cliente:]]></text>
            </staticText>
            <textField>
                <reportElement x="100" y="60" width="300" height="20"/>
                <textFieldExpression><![CDATA[$P{CLIENTE_RAZON_SOCIAL}]]></textFieldExpression>
            </textField>
            <staticText>
                <reportElement x="0" y="80" width="100" height="20"/>
                <textElement><font isBold="true"/></textElement>
                <text><![CDATA[RUC:]]></text>
            </staticText>
            <textField>
                <reportElement x="100" y="80" width="200" height="20"/>
                <textFieldExpression><![CDATA[$P{CLIENTE_RUC}]]></textFieldExpression>
            </textField>
            <staticText>
                <reportElement x="0" y="100" width="100" height="20"/>
                <textElement><font isBold="true"/></textElement>
                <text><![CDATA[Fecha:]]></text>
            </staticText>
            <textField pattern="dd/MM/yyyy">
                <reportElement x="100" y="100" width="100" height="20"/>
                <textFieldExpression><![CDATA[$P{FECHA_PEDIDO}]]></textFieldExpression>
            </textField>
            <image scaleImage="RetainShape">
                <reportElement x="435" y="0" width="100" height="100"/>
                <imageExpression><![CDATA[$P{QR_CODE}]]></imageExpression>
            </image>
        </band>
    </title>

    <columnHeader>
        <band height="25">
            <staticText>
                <reportElement mode="Opaque" x="0" y="0" width="200" height="25" backcolor="#CCCCCC"/>
                <box><pen lineWidth="0.5"/></box>
                <textElement textAlignment="Center" verticalAlignment="Middle"><font isBold="true"/></textElement>
                <text><![CDATA[Producto]]></text>
            </staticText>
            <staticText>
                <reportElement mode="Opaque" x="200" y="0" width="85" height="25" backcolor="#CCCCCC"/>
                <box><pen lineWidth="0.5"/></box>
                <textElement textAlignment="Center" verticalAlignment="Middle"><font isBold="true"/></textElement>
                <text><![CDATA[Cantidad]]></text>
            </staticText>
            <staticText>
                <reportElement mode="Opaque" x="285" y="0" width="125" height="25" backcolor="#CCCCCC"/>
                <box><pen lineWidth="0.5"/></box>
                <textElement textAlignment="Center" verticalAlignment="Middle"><font isBold="true"/></textElement>
                <text><![CDATA[Precio Unit.]]></text>
            </staticText>
            <staticText>
                <reportElement mode="Opaque" x="410" y="0" width="125" height="25" backcolor="#CCCCCC"/>
                <box><pen lineWidth="0.5"/></box>
                <textElement textAlignment="Center" verticalAlignment="Middle"><font isBold="true"/></textElement>
                <text><![CDATA[Subtotal]]></text>
            </staticText>
        </band>
    </columnHeader>

    <detail>
        <band height="20">
            <textField>
                <reportElement x="0" y="0" width="200" height="20"/>
                <box><pen lineWidth="0.5"/></box>
                <textElement verticalAlignment="Middle" leftIndent="5"/>
                <textFieldExpression><![CDATA[$F{producto}]]></textFieldExpression>
            </textField>
            <textField>
                <reportElement x="200" y="0" width="85" height="20"/>
                <box><pen lineWidth="0.5"/></box>
                <textElement textAlignment="Center" verticalAlignment="Middle"/>
                <textFieldExpression><![CDATA[$F{cantidad}]]></textFieldExpression>
            </textField>
            <textField pattern="#,##0.00">
                <reportElement x="285" y="0" width="125" height="20"/>
                <box><pen lineWidth="0.5"/></box>
                <textElement textAlignment="Right" verticalAlignment="Middle" rightIndent="5"/>
                <textFieldExpression><![CDATA[$F{precioUnitario}]]></textFieldExpression>
            </textField>
            <textField pattern="#,##0.00">
                <reportElement x="410" y="0" width="125" height="20"/>
                <box><pen lineWidth="0.5"/></box>
                <textElement textAlignment="Right" verticalAlignment="Middle" rightIndent="5"/>
                <textFieldExpression><![CDATA[$F{subtotal}]]></textFieldExpression>
            </textField>
        </band>
    </detail>

    <summary>
        <band height="80">
            <staticText>
                <reportElement x="285" y="10" width="125" height="25"/>
                <box><pen lineWidth="0.5"/></box>
                <textElement textAlignment="Right" verticalAlignment="Middle" rightIndent="5"><font isBold="true"/></textElement>
                <text><![CDATA[TOTAL:]]></text>
            </staticText>
            <textField pattern="#,##0.00">
                <reportElement x="410" y="10" width="125" height="25"/>
                <box><pen lineWidth="0.5"/></box>
                <textElement textAlignment="Right" verticalAlignment="Middle" rightIndent="5"><font isBold="true" size="12"/></textElement>
                <textFieldExpression><![CDATA[$P{TOTAL}]]></textFieldExpression>
            </textField>
            <staticText>
                <reportElement x="0" y="45" width="535" height="15"/>
                <textElement textAlignment="Center">
                    <font size="8" isItalic="true"/>
                </textElement>
                <text><![CDATA[Documento verificable mediante código QR]]></text>
            </staticText>
            <textField>
                <reportElement x="0" y="60" width="535" height="15"/>
                <textElement textAlignment="Center">
                    <font size="8"/>
                </textElement>
                <textFieldExpression><![CDATA["Código: " + $P{VERIFICATION_CODE}]]></textFieldExpression>
            </textField>
        </band>
    </summary>
</jasperReport>
