<?xml version="1.0" encoding="UTF-8"?>
<jasperReport xmlns="http://jasperreports.sourceforge.net/jasperreports"
              xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
              xsi:schemaLocation="http://jasperreports.sourceforge.net/jasperreports http://jasperreports.sourceforge.net/xsd/jasperreport.xsd"
              name="contenedor" pageWidth="595" pageHeight="842" columnWidth="535" leftMargin="30" rightMargin="30"
              topMargin="20" bottomMargin="20">

    <parameter name="CONTENEDOR_NUMERO" class="java.lang.String"/>
    <parameter name="TIPO" class="java.lang.String"/>
    <parameter name="ESTADO" class="java.lang.String"/>
    <parameter name="PESO_ACTUAL" class="java.math.BigDecimal"/>
    <parameter name="CAPACIDAD_PESO" class="java.math.BigDecimal"/>
    <parameter name="VOLUMEN_ACTUAL" class="java.math.BigDecimal"/>
    <parameter name="CAPACIDAD_VOLUMEN" class="java.math.BigDecimal"/>
    <parameter name="UBICACION" class="java.lang.String"/>
    <parameter name="FECHA_LLEGADA" class="java.util.Date"/>
    <parameter name="QR_CODE" class="java.io.InputStream"/>
    <parameter name="VERIFICATION_CODE" class="java.lang.String"/>

    <field name="producto" class="java.lang.String"/>
    <field name="cantidad" class="java.lang.Integer"/>
    <field name="pesoKg" class="java.math.BigDecimal"/>
    <field name="volumenM3" class="java.math.BigDecimal"/>

    <title>
        <band height="140">
            <staticText>
                <reportElement x="0" y="0" width="535" height="30"/>
                <textElement textAlignment="Center" verticalAlignment="Middle">
                    <font size="18" isBold="true"/>
                </textElement>
                <text><![CDATA[REPORTE DE CONTENEDOR]]></text>
            </staticText>
            <staticText>
                <reportElement x="0" y="40" width="100" height="15"/>
                <textElement><font isBold="true"/></textElement>
                <text><![CDATA[N° Contenedor:]]></text>
            </staticText>
            <textField>
                <reportElement x="100" y="40" width="200" height="15"/>
                <textElement><font isBold="true" size="11"/></textElement>
                <textFieldExpression><![CDATA[$P{CONTENEDOR_NUMERO}]]></textFieldExpression>
            </textField>
            <staticText>
                <reportElement x="0" y="60" width="100" height="15"/>
                <textElement><font isBold="true"/></textElement>
                <text><![CDATA[Tipo:]]></text>
            </staticText>
            <textField>
                <reportElement x="100" y="60" width="150" height="15"/>
                <textFieldExpression><![CDATA[$P{TIPO}]]></textFieldExpression>
            </textField>
            <staticText>
                <reportElement x="0" y="80" width="100" height="15"/>
                <textElement><font isBold="true"/></textElement>
                <text><![CDATA[Estado:]]></text>
            </staticText>
            <textField>
                <reportElement x="100" y="80" width="150" height="15"/>
                <textFieldExpression><![CDATA[$P{ESTADO}]]></textFieldExpression>
            </textField>
            <staticText>
                <reportElement x="0" y="100" width="100" height="15"/>
                <textElement><font isBold="true"/></textElement>
                <text><![CDATA[Ubicación:]]></text>
            </staticText>
            <textField>
                <reportElement x="100" y="100" width="300" height="15"/>
                <textFieldExpression><![CDATA[$P{UBICACION}]]></textFieldExpression>
            </textField>
            <staticText>
                <reportElement x="0" y="120" width="100" height="15"/>
                <textElement><font isBold="true"/></textElement>
                <text><![CDATA[Peso/Capacidad:]]></text>
            </staticText>
            <textField pattern="#,##0.00">
                <reportElement x="100" y="120" width="250" height="15"/>
                <textFieldExpression><![CDATA[$P{PESO_ACTUAL} + " / " + $P{CAPACIDAD_PESO} + " kg"]]></textFieldExpression>
            </textField>
            <image scaleImage="RetainShape">
                <reportElement x="435" y="0" width="100" height="100"/>
                <imageExpression><![CDATA[$P{QR_CODE}]]></imageExpression>
            </image>
        </band>
    </title>

    <columnHeader>
        <band height="25">
            <staticText>
                <reportElement mode="Opaque" x="0" y="0" width="235" height="25" backcolor="#CCCCCC"/>
                <box><pen lineWidth="0.5"/></box>
                <textElement textAlignment="Center" verticalAlignment="Middle"><font isBold="true"/></textElement>
                <text><![CDATA[Producto]]></text>
            </staticText>
            <staticText>
                <reportElement mode="Opaque" x="235" y="0" width="100" height="25" backcolor="#CCCCCC"/>
                <box><pen lineWidth="0.5"/></box>
                <textElement textAlignment="Center" verticalAlignment="Middle"><font isBold="true"/></textElement>
                <text><![CDATA[Cantidad]]></text>
            </staticText>
            <staticText>
                <reportElement mode="Opaque" x="335" y="0" width="100" height="25" backcolor="#CCCCCC"/>
                <box><pen lineWidth="0.5"/></box>
                <textElement textAlignment="Center" verticalAlignment="Middle"><font isBold="true"/></textElement>
                <text><![CDATA[Peso (kg)]]></text>
            </staticText>
            <staticText>
                <reportElement mode="Opaque" x="435" y="0" width="100" height="25" backcolor="#CCCCCC"/>
                <box><pen lineWidth="0.5"/></box>
                <textElement textAlignment="Center" verticalAlignment="Middle"><font isBold="true"/></textElement>
                <text><![CDATA[Volumen (m³)]]></text>
            </staticText>
        </band>
    </columnHeader>

    <detail>
        <band height="20">
            <textField>
                <reportElement x="0" y="0" width="235" height="20"/>
                <box><pen lineWidth="0.5"/></box>
                <textElement verticalAlignment="Middle" leftIndent="5"/>
                <textFieldExpression><![CDATA[$F{producto}]]></textFieldExpression>
            </textField>
            <textField>
                <reportElement x="235" y="0" width="100" height="20"/>
                <box><pen lineWidth="0.5"/></box>
                <textElement textAlignment="Center" verticalAlignment="Middle"/>
                <textFieldExpression><![CDATA[$F{cantidad}]]></textFieldExpression>
            </textField>
            <textField pattern="#,##0.00">
                <reportElement x="335" y="0" width="100" height="20"/>
                <box><pen lineWidth="0.5"/></box>
                <textElement textAlignment="Right" verticalAlignment="Middle" rightIndent="5"/>
                <textFieldExpression><![CDATA[$F{pesoKg}]]></textFieldExpression>
            </textField>
            <textField pattern="#,##0.00">
                <reportElement x="435" y="0" width="100" height="20"/>
                <box><pen lineWidth="0.5"/></box>
                <textElement textAlignment="Right" verticalAlignment="Middle" rightIndent="5"/>
                <textFieldExpression><![CDATA[$F{volumenM3}]]></textFieldExpression>
            </textField>
        </band>
    </detail>

    <summary>
        <band height="60">
            <staticText>
                <reportElement x="0" y="20" width="535" height="15"/>
                <textElement textAlignment="Center">
                    <font size="8" isItalic="true"/>
                </textElement>
                <text><![CDATA[Documento verificable mediante código QR]]></text>
            </staticText>
            <textField>
                <reportElement x="0" y="35" width="535" height="15"/>
                <textElement textAlignment="Center">
                    <font size="8"/>
                </textElement>
                <textFieldExpression><![CDATA["Código de verificación: " + $P{VERIFICATION_CODE}]]></textFieldExpression>
            </textField>
        </band>
    </summary>
</jasperReport>
